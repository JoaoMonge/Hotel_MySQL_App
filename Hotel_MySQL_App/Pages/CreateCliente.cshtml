@page
@model Hotel_MySQL_App.Pages.CreateClienteModel
@{
}



<h2>Add a new Client</h2>

<div class="d-flex justify-content-center align-items-center">

    <form method="POST" style="width: 30vw;">

        <div class="form-group m-3">
            <label for="nome">Nome Cliente</label>
            <input type="text" class="form-control" name="nome" id="nome" placeholder="Insira o nome do cliente" />
        </div>
        <div class="form-group m-3">
            <label for="numero">Número cliente </label>
            <input type="text" class="form-control" id="numero" name="numero" placeholder="Insira o número do cliente" />
        </div
        <div class="d-flex justify-content-center m-3">
            <input class="btn btn-primary" type="submit" value="Criar" />
        </div>



    </form>
</div>

