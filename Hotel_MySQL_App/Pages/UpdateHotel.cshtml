@page
@model Hotel_MySQL_App.Pages.HotelsUpdateModel
@{
}

<h1>Hotels</h1>


<table>
    <tr>
        <th>Sigla Hotel</th>
        <th>Designacao</th>
        <th>Localizacao</th>
        <th>Created At</th>
    </tr>

    @foreach (var item in Model.Hotels)
    {
        <tr>
            <form method="POST">
                <input type="hidden" name="operacao" value="update" />
                  
            <td>
                <input type="text" id="sigla"  value="@Html.DisplayFor(modelItem => item.Sigla_Hotel)" disabled/>
            </td>
            <td>
                <input type="text" id="designacao" name="Designacao" value="@Html.DisplayFor(modelItem => item.Designacao)" />
            </td>
            <td>
                <input type="text" id="localizacao" name="Localizacao" value="@Html.DisplayFor(modelItem => item.Localizacao)" />
            </td>
            <td>
                <input type="text" id="createdAt"  value="@Html.DisplayFor(modelItem => item.CreatedAt)" disabled/>
            </td>
            <td>
                <input type="submit" value="Gravar" />
            </td>
            </form>
            <td>
                <form method="Post">
                    <input type="hidden" name="operacao" value="delete" />
                    <input type="hidden" name="sigla" id="sigla" value="@Html.DisplayFor(modelItem => item.Sigla_Hotel)" />

                    <input type="submit" value="Apagar" />
                </form>
            </td>
        </tr>
      
    }
</table>

